<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_applicant_view_form_inherit_feedback" model="ir.ui.view">
        <field name="name">hr.applicant.view.form.inherit.feedback</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            
            <div name="button_box" position="inside">
                <button name="action_view_feedbacks"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-comments">
                    <field name="feedback_count" widget="statinfo" string="Feedbacks"/>
                </button>
            </div>
            
        </field>
    </record>
</odoo>